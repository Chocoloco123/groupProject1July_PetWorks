extends layout.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)
  script(src="/javascripts/petTypes.js" type="module" defer)

block content
    include navigation-bar.pug
    div(id='welcome-petFilter')
        if locals.authenticated
            div(id='welcome') Welcome #{username}
        else
            div(id='welcome') Welcome!
        include petType.pug
    div(id='categories-questionFeed')
        include categories.pug
        include question-feed.pug
    input(type='hidden' id='queryCategory' name='pageTag' value='Home')
