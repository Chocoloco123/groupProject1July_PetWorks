extends layout.pug

include utils.pug

block content
    div(id='editAnswer-form')
        +validationErrorSummary(errors)
        div Edit Answer:
        div Answer:
        form(action=`/answers/${answer.id}/edit` method='post')
            input(type='hidden' value=questionId name='questionId')
            input(type='hidden' name='_csrf' value=csrfToken)
            +field('Answer', 'answer', answer.answer, 'textarea')

            div
                button(type='submit') Submit
                a(href='/') Cancel