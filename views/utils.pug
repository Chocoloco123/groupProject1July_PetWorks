mixin validationErrorSummary(errors)
  if errors
    div(class='alert alert-danger formErr' role='alert')
      p The following error(s) occurred:
      ul
        each error in errors
          li(class='errorMessage')= error

mixin field(labelText, fieldName, fieldValue, fieldType = 'text', placeholder = null)
  div(class='form-group')
    label(for=fieldName)= labelText
    if fieldType === 'textarea'
      textarea(id=fieldName name=fieldName class='form-control commentField' rows='5')= fieldValue
    else
      input(type=fieldType id=fieldName name=fieldName value=fieldValue placeholder=placeholder class='form-control commentField')