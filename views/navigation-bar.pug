div(id='nav-bar')
    div.navChild
        a(href='/')
            img(src='/images/PetWorks_puppy.png' id='puppy-pic' class='puppy-pic-logo')
        img(src='/images/PetWorksLogo.png' id='petWorks')
    form(action='/questions/new' method='get' class="navChild")
        button(type='submit' id='addQuestionButton') Ask a Question
    div(id='home-logout' class="navChild")
        form(action='/' method='get')
            button(type='submit' class='navButton' id='homeButton') Home
        if locals.authenticated
            form(action='/user/logout' method='post')
                button(type='submit' class='navButton' id='logoutButton') Log Out
        else
            form(action='/user/register' method='get')
                button(type='submit' class='navButton' id='registerButton') Register
            form(action='/user/login' method='get')
                button(type='submit' class='navButton' id='loginButton') Log In
            form(action='/user/guest' method='post')
                button(type='submit' class='navButton' id='guestButton') Log in as guest
