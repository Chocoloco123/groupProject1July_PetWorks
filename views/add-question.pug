extends layout.pug

include utils.pug

block content
    div(id='addQuestion-form')
        +validationErrorSummary(errors)
        div Ask a Question:
        div Username asks
        form(action='/questions/new' method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            +field('Question', 'question', null, 'textarea')
            
            label(for='category') Choose Category:
                select(name='category')
                    option(value='health') Health
                    option(value='nutrition') Nutrition
                    option(value='activities') Activities
                    option(value='training') Training
                    option(value='social') Social
            label(for='petType') Choose Pet Type:
                select(name='petType')
                    option(value='dog') Dog
                    option(value='cat') Cat
                    option(value='other') Other

            div
                button(type='submit') Submit
                a(href='/') Cancel
