extends layout.pug

include utils.pug

block content
    div(id='addAnswer-form')
        +validationErrorSummary(errors)
        div(id='editAComment') Edit Comment:
        form(action=`/comments/${comment.id}/edit` method='post')
            input(type='hidden' value=questionId name='questionId')
            input(type='hidden' name='_csrf' value=csrfToken)
            +field('', 'commentEdited', comment.comment, 'textarea')

            div(id='answerButtons')
                button(type='submit' id='submitQuestion' class='regSubmitBtn') Submit
                a(href='/' id='cancelQuestion') Cancel
