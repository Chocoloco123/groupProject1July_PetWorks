extends layout.pug

include utils.pug

block content
    div(id='editComment-form')
        +validationErrorSummary(errors)
        div Edit Comment:
        div Comment:
        form(action=`/comments/${comment.id}/edit` method='post')
            //- input(type='hidden' value=questionId name='questionId')
            input(type='hidden' name='_csrf' value=csrfToken)
            +field('Comment', 'comment', comment.comment, 'textarea')

            div
                button(type='submit') Submit
                a(href='/') Cancel